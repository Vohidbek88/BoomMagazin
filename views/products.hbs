
{{#if myProducts.length}}
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    {{#each myProducts}}
 <div class="col">
          <div class="card shadow-sm">
            <img src='{{image}}' width="100%" height="300" alt="image">
            <div class="card-body">
              <p class="card-text fw-bold">{{title}}.</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="avatar">

              <p>{{getName user.firstName user.lastName}}</p>
                </div>
                <small class="text-body-secondary">{{price}}.00$</small>
              </div>
            </div>
          </div>
        </div>
    {{/each}}
</div>
{{else}}
<p>No Product</p>
{{/if}}
