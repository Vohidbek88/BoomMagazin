
<form class="w-50 mt-5 m-auto" action="/edit-product/{{product._id}}" method="post">
    <h1 class="h3 mb-3 fw-normal">Edit Product -{{product.title}}</h1>
{{#if errorEditProducts}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <strong>Error!</strong> {{errorEditProducts}}.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}
    <div class="form-floating">
      <input type="text" value="{{product.title}}" class="form-control" name="title" id="floatingInput" placeholder="Title">
      <label for="floatingInput">Title</label>
    </div>
   <div class="form-floating my-3">
  <textarea class="form-control"  placeholder="Description" name="description" id="floatingTextarea2" style="height: 100px">{{product.description}}</textarea>
  <label for="floatingTextarea2">Description</label>
</div>
 <div class="form-floating mb-3">
      <input type="text" value="{{product.image}}" class="form-control" name="image" id="floatingInput" placeholder="Image">
      <label for="floatingInput">Image Url</label>
    </div>

    <div class="input-group mb-3">
  <span class="input-group-text">$</span>
  <div class="form-floating">
    <input type="text" value="{{product.price}}" class="form-control" name="price" id="floatingInputGroup1" placeholder="Price">
    <label for="floatingInputGroup1">Price</label>
  </div>
</div>
    <button class="btn btn-primary w-100 py-2" type="submit">Edit</button>
  </form>   