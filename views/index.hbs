
{{#if products.length}}
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    {{#each products}}
 <div class="col">
          <div class="card shadow-sm">
            <img src='{{image}}' width="100%" height="300" alt="image">
            <div class="card-body">
              <p class="card-text fw-bold">{{title}}.</p>
              <div class="d-flex justify-content-between align-items-center">
              <p class="p-0 m-0">{{formatDate createdAt}}</p>
                <small class="text-body-secondary">{{price}}.00$</small>
              </div>
            </div>
           
            <div class="card-footer">
                <div class="btn-group" role="group" aria-label="Basic mixed styles example">
  <a type="button" class="btn btn-danger" href="/product/{{_id}}">View</a>
   {{#if @root.token}}
{{#ifequal user @root.userId}}
  <a type="button" class="btn btn-warning" href="/edit-product/{{_id}}">Edit</a>
  <form action="/delete-product/{{_id}}" method="post">
  <button type="submit" class="btn btn-success">Delete</button>

  </form>
{{/ifequal}}
  {{/if}}
</div>
            </div>
          </div>
        </div>
    {{/each}}
</div>
{{else}}
<p>No Product</p>
{{/if}}


